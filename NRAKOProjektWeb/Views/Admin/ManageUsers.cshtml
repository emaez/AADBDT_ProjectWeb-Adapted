@model IEnumerable<NRAKOProjektWeb.ViewModels.ManageUserViewModel>

@{
    ViewData["Title"] = "ManageUsers";
}

<h1>ManageUsers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubscriptionModelName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enabled)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.SubscriptionModelName)
            </th>
            <td>
                @Html.ActionLink("User Photos", "UserPhotos", "Photos", new { id = item.Id}) |
                @Html.ActionLink("Statistics", "UserStatiscticsAndActions", new { id = item.Id }) |
                @Html.ActionLink("Edit", "EditUser", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
