@model NRAKOProjektWeb.ViewModels.EditPhotoViewModel

@{
    ViewData["Title"] = "EditPhoto";
}

<h1>EditPhoto</h1>

<h4>EditPhotoViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <img src="@Url.Content(Model.Url)" alt="Alternate Text" style="width:100%"  />
    </div>
    <div class="col-md-4">
        <form asp-action="EditPhoto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hashtags" class="control-label"></label>
                <input asp-for="Hashtags" class="form-control" />
                <span asp-validation-for="Hashtags" class="text-danger"></span>
            </div>
            <input type="hidden" name="PhotoId" value="@Model.PhotoId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
